<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp"
    app:strokeColor="@color/StrokeColor"
    app:strokeWidth="6dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogBackground">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationConfirm"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:background="@color/dialogBackground"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@id/messageConfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/messageConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="hello"
        android:textColor="@color/dialogtextcolor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/animationConfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.207" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageConfirm"
        app:strokeColor="@color/StrokeColor"
        app:strokeWidth="5dp">

        <Button
            android:id="@+id/deleteComplete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="deleteorconfirm"
            android:backgroundTint="#FFE4C4"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/dialogtextcolor"
            android:textSize="15sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/StrokeColor"
        android:layout_marginEnd="20dp"
        app:strokeWidth="5dp">

        <Button
            android:id="@+id/cancel"
            android:contentDescription="cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#FFE4C4"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/dialogtextcolor"
            android:textSize="15sp"
            android:textStyle="bold" />

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>